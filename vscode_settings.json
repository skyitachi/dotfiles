// 将设置放入此文件中以覆盖默认设置
{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 14,
    "vim.disableAnnoyingNeovimMessage": true,
    "workbench.welcome.enabled": false,
    "typescript.check.tscVersion": false,
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true,
        ".javadoc": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true,
        ".javadoc": true,
        ".dist": true
    },
    "typescript.check.npmIsInstalled": false,
    "window.zoomLevel": 0,
    "eslint.enable": false,
    "extensions.ignoreRecommendations": true
}